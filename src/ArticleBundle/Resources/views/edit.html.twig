 {% extends "@User/layout.html.twig" %}
 

   {% block dashbordContent %}
   <ol class="breadcrumb">
   <li class="breadcrumb-item">
            <a href="{{path('adminDashboard')}}">Dashboard</a>
          </li>
          <li class="breadcrumb-item active"> {{article.title}}</li>
        </ol>
<div class="container">
<h1 class="mb-5 mt-5"> Modifier l'article</h1>
{{form_start(form)}}
<div class="form-group">
      <label for="title">titre</label>
      {{form_widget(form.title, {'placeholder': article.title}) }}
    </div>
<div class="form-group">
      <label for="content">contenu</label>
      {{form_widget(form.description,{'placeholder': article.description}) }}
    </div>
    <div class="form-group">
      <label for="image">image</label>
      {{form_widget(form.image, {'placeholder': article.image} ) }}
    </div>
     
    {{form_end(form)}}
    </div>
   {% endblock %}

  

     